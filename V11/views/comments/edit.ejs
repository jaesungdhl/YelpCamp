<% include ../partials/header.ejs %>
<div class="container">
    <h1 class="text-center mb-4">Edit this comment</h1>
        <div class="container">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group" id="campgroundForm">
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Comment</span>
                        </div>
                             <textarea class="form-control" aria-label="With textarea" name="comment[text]" value="<%= comment.text %>"><%= comment.text %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mb-4 btn-block">Submit</button>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
</div>

<% include ../partials/footer.ejs %>